{% set c = block_parser(content) %}
{% set menu_2 = simplify_menu(c.menu) %}
{% set menu_lang = simplify_menu(c.menu2).menu_tree %}
{% set menu_lang_length = menu_lang|length %}
{% set menu_currency= simplify_menu(c.menu_lang).menu_tree %}
{% set menu_currency_length = menu_currency|length %}
{% set links_rs = c['field_links'] %}
{% set links_rs_length = links_rs|length %}
{% set links = c['field_link'] %}
{% set links_length = links|length %}
{% set menu_main = simplify_menu(c.field_menu_main) %}
{% set menu_main_length = menu_main|length %}
{% set menu_right = simplify_menu(c.menu).menu_tree %}
{% set menu_right_length = menu_right|length %}
{% set search_category = simplify_menu(c.search_with_catogory) %}
{% set search_category_length = search_category|length %}

<style>
    .header4-and p {
        color: #fff !important;
    }
    .header4-and .text-color-dark, .header4-and  .text-dark {
        color: #fff !important;
    }
    .header4-and .header-nav-bar.header-nav-bar-top-border {
        border-top: none !important
    }
    .header4-and .header-nav-bar.header-nav-bar-top-border {
        background-color: #3366CC;
    }
    .header4-and .header-column .header-extra-info li .header-extra-info-text a {
        color: #fff !important;
    }

</style>

{{kint(c)}}
{{kint(search_category)}}

<header id="header" data-plugin-options="{'stickyEnabled': true, 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': false, 'stickyStartAt': 135, 'stickySetTop': '-135px', 'stickyChangeLogo': true}" class="header4-and">
    <div class="header-body header-body-bottom-border-fixed box-shadow-none border-top-0">
        <div class="header-top header-top-small-minheight header-top-simple-border-bottom">
            <div class="container">
                <div class="header-row justify-content-between">
                    <div class="header-column col-auto px-0">
                        <div class="header-row">
                            <p class="font-weight-semibold text-1 mb-0 d-none d-md-block">{{c.field_title}}</p>
                        </div>
                    </div>
                    <div class="header-column justify-content-end col-auto px-0">
                        <div class="header-row">
                            <nav class="header-nav-top">
                                <ul class="nav nav-pills font-weight-semibold text-2">
                                    <li class="nav-item dropdown nav-item-left-border d-lg-none">
                                        <a class="nav-link text-color-default text-color-hover-primary" href="#" role="button" id="dropdownMobileMore" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            More
                                            <i class="fas fa-angle-down"></i>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMobileMore">
                                            {% for item in menu_2.menu_tree %}
                                                <a class="dropdown-item" href="{{ item.url }}">  {{ item.text }} </a>
                                            {% endfor %}
                                        </div>
                                    </li>
                                    {% for item in menu_2.menu_tree %}
                                    <li class="nav-item d-none d-lg-inline-block">
                                        <a href="{{ item.url }}" class="text-decoration-none text-color-default text-color-hover-primary">{{ item.text }}</a>
                                    </li>
                                    {% endfor %}

                                    {% for size in 0 .. (menu_lang_length - 1) %}
                                    <li class="nav-item dropdown nav-item-left-border">
                                        <a class="nav-link text-color-default text-color-hover-primary" href="{{ item.url }}" role="button" id="dropdownCurrency" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            {{ menu_lang[size].text }}
                                            <i class="fas fa-angle-down"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-arrow-centered min-width-0" aria-labelledby="dropdownCurrency">
                                            
                                            {% set menu_lang_submenu =  menu_lang[size]['submenu'] %}
                                            {% set menu_lang_submenu_length = menu_lang_submenu|length %}
                                            {% for size_submenu in 0 .. (menu_lang_submenu_length - 1) %}
                                            <a class="dropdown-item" href="{{ menu_lang_submenu[size_submenu].url }}">  {{ menu_lang_submenu[size_submenu].text }}</a>
                                            {% endfor %}

                                        </div>
                                    </li>
                                    {% endfor %}

                                    {% for size in 0 .. (menu_currency_length - 1) %}
                                    <li class="nav-item dropdown nav-item-left-border">
                                        <a class="nav-link text-color-default text-color-hover-primary" href="{{ item.url }}" role="button" id="dropdownCurrency" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            {{ menu_currency[size].text }}
                                            <i class="fas fa-angle-down"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-arrow-centered min-width-0" aria-labelledby="dropdownCurrency">
                                            
                                            {% set menu_currency_submenu =  menu_currency[size]['submenu'] %}
                                            {% set menu_currency_submenu_length = menu_currency_submenu|length %}
                                            {% for size_submenu in 0 .. (menu_currency_submenu_length - 1) %}
                                            <a class="dropdown-item" href="{{ menu_currency_submenu[size_submenu].url }}">  {{ menu_currency_submenu[size_submenu].text }}</a>
                                            {% endfor %}

                                        </div>
                                    </li>
                                    {% endfor %}

                                </ul>
                                <ul class="header-social-icons social-icons social-icons-clean social-icons-icon-gray">
                                    {% for size in 0 .. (links_rs_length - 1) %}
                                    <li class="social-icons-{{links_rs[size].title}}">
                                        <a href="{{links_rs[size].url}}" target="_blank" title="{{links_rs[size].title}}"><i class="fab {{links_rs[size]['options']['attributes']['class'][0]}}"></i></a>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="header-container container">
            <div class="header-row py-2">
                <div class="header-column w-100">
                    <div class="header-row justify-content-between">
                        <div class="header-logo z-index-2 col-lg-2 px-0">
                            <a href="index.html">
                                <img alt="Travel Bug USA" class="header-logo-non-sticky" src="{{c['media_image']['image'].url}}" style="position: relative; height:48px; max-width:243px; width:auto; opacity:1 !important">
                            </a>
                        </div>
                        <div class="header-nav-features header-nav-features-no-border col-lg-5 col-xl-6 px-0 ms-0">
                            <div class="header-nav-feature ps-lg-5 pe-lg-4">
                                <form role="search" action="page-search-results.html" method="get">
                                    <div class="search-with-select">
                                        <a href="#" class="mobile-search-toggle-btn me-2" data-porto-toggle-class="open">
                                            <i class="icons icon-magnifier text-color-dark text-color-hover-primary"></i>
                                        </a>
                                        <div class="search-form-wrapper input-group">
                                            <input class="form-control text-1" id="headerSearch" name="q" type="search" value="" placeholder="Search...">
                                            <div class="search-form-select-wrapper">
                                                <div class="custom-select-1">
                                                    <select name="category" class="form-control form-select">
                                                        <option value="all" selected>All Categories</option>
                                                        <option value="fashion">Fashion</option>
                                                        <option value="electronics">Electronics</option>
                                                        <option value="homegarden">Home & Garden</option>
                                                        <option value="motors">Motors</option>
                                                        <option value="features">Features</option>
                                                    </select>
                                                </div>
                                                <button class="btn" type="submit">
                                                    <i class="icons icon-magnifier header-nav-top-icon text-color-dark"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <ul class="header-extra-info col-lg-3 col-xl-2 ps-2 ps-xl-0 ms-lg-3 d-none d-lg-block">
                            <li class="d-none d-sm-inline-flex ms-0">
                                <div class="header-extra-info-icon ms-lg-4">
                                    <i class="icons icon-phone text-3 text-color-dark position-relative top-1"></i>
                                </div>
                                <div class="header-extra-info-text">
                                    <label class="text-1 font-weight-semibold text-color-default">CALL US NOW</label>
                                    <strong class="text-4"><a href="tel:+1234567890" class="text-color-hover-primary text-decoration-none" style="color:#fff !important">+123 4567 890</a></strong>
                                </div>
                            </li>
                        </ul>
                        <div class="d-flex col-auto col-lg-2 pe-0 ps-0 ps-xl-3">
                            <ul class="header-extra-info">
                                {% for size in 0 .. (links_length - 1) %}
                                <li class="ms-0 ">
                                    <div class="header-extra-info-icon">
                                        <a href="{{links[size].url}}" class="text-decoration-none text-color-dark text-color-hover-primary text-2">
                                            <i class="icons {{links[size]['options']['attributes']['class'][0]}}"></i>
                                        </a>
                                    </div>
                                </li>
                                {% endfor %}
            
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="header-column justify-content-end">
                    <div class="header-row">

                    </div>
                </div>
            </div>
        </div>
        
        <div class="header-nav-bar header-nav-bar-top-border">
            <div class="header-container container">
                <div class="header-row">
                    <div class="header-column">
                        <div class="header-row justify-content-end">
                            <div class="header-nav header-nav-line header-nav-top-line header-nav-top-line-with-border justify-content-start" data-sticky-header-style="{'minResolution': 991}" data-sticky-header-style-active="{'margin-left': '105px'}" data-sticky-header-style-deactive="{'margin-left': '0'}">
                                <div class="header-nav-main header-nav-main-square header-nav-main-dropdown-no-borders header-nav-main-effect-3 header-nav-main-sub-effect-1 w-100">
                                    <nav class="collapse w-100">
                                        <ul class="nav nav-pills w-100" id="mainNav">
                                            {% for item in menu_main.menu_tree %}
                                            <li class="dropdown">
                                                <a class="dropdown-item dropdown-toggle" href="{{ item.url }}">
                                                    {{ item.text }}
                                                </a>
                                            </li>
                                            {% endfor %}

                                            {% for size in 0 .. (menu_right_length - 1) %}
                                                {% if size == 0 %}
                                                    {% set class = "dropdown ms-lg-auto" %}
                                                {% else %}
                                                    {% set class = "dropdown" %}
                                                {% endif %}
                                            <li class="{{class}}">
                                                <a href="{{menu_right[size].url}}" class="dropdown-item">
                                                    {{ menu_right[size].text }}
                                                </a>
                                            </li>
                                            {% endfor %}
                                        </ul>
                                    </nav>
                                </div>
                                <button class="btn header-btn-collapse-nav" data-bs-toggle="collapse" data-bs-target=".header-nav-main nav">
                                    <i class="fas fa-bars"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>