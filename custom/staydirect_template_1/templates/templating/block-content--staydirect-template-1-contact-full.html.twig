{% block templating_content %}
{% set c = block_parser(content) %}
{% set paragraphs = c['field_paragraphs'] %}
{% set paragraphs_length = paragraphs|length %}
{% set texts = c['field_texts'] %}
{% set txts_length = texts|length %}
{% set texts2 = c['field_texts2'] %}
{% set txts2_length = texts2|length %}

<style>
  *::after,
  *::before {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
  }

  * {
      scroll-behavior: smooth;
  }
  .btn--resp {
    padding: 20px 35px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 38px;
    background: var(--bleu-color);
    color: #FFF;
    font-family: "Montserrat";
    font-size: 18px;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
  }
  ul {
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
  }
  ul li {
    list-style-type: none;
  }
.wrapper--resp {
  margin: auto;
} 
header .menu-main--resp ul {
  display: flex;
  flex-direction: row;
  gap: 39px;
}  
header .menu-main--resp ul li a{
  color: var(--bleumarine-color);
  font-family: "Montserrat";
  font-size: 23px;
  font-style: normal;
  font-weight: 500;
  line-height: normal;
} 
header .menu-main--resp ul li.active a {
  color: var(--bleu-color);
} 
header .menu-main--resp ul li.active::after {
  content: "";
  width: 29px;
  height: 3px;
  background: var(--bleu-color);
  margin-top: 10px !important;
  display: block ;
  margin: auto;
}
@media (max-width: 499.96px) {
  .wrapper--resp {
    width: 100%;
    max-width: none !important;
    padding-left: 20px;
    padding-right:20px
  }

}
@media (min-width: 499.98px) {
  .wrapper--resp {
    width: 100%;
    max-width: none;
    padding-left: 20px;
    padding-right:20px;
  }
}
@media (min-width: 767.98px) {
  .wrapper--resp {
    width: 100%;
    max-width: none !important;
    padding-left: 40px;
    padding-right:40px
  }
}
@media (min-width: 991.98px) {
  .wrapper--resp {
    width: 100%;
    max-width: none !important;
    padding-left: 60px;
    padding-right:60px;
  }
  .none-desk, .menu-mobile-effet {
    display: none !important;
  }

}
@media (min-width: 1199.98px) {
  .wrapper--resp {
    width: 100%;
    max-width: none !important;
    padding-left: 60px;
    padding-right:60px;
  }
}
@media (min-width: 1385.98px) {
    .wrapper--resp {
      max-width: 1200px !important;
      padding-left: 0px;
      padding-right:0px;
    }
}
@media (min-width: 1499.98px) {
  .wrapper--resp {
    max-width: 1500px;
    padding-left: 0px;
    padding-right:0px;
  }
}
</style>
<style>
    .contact {
      position: relative;
      max-width: 1500px;
      position: relative;
      margin: auto;
      margin-bottom: 71px;
      position: relative;
    }
    .contact .container {
        margin:auto;
    }
    .contact .row.row-cnt {
      margin-top: 112px;
    }
    .contact .col-cont-right {
        min-height: 855px;
        padding-top: 74px;
        padding-left: 2vw;
    }
    .contact h1 {
      color: #333;
      font-family: "Playfair Display";
      font-size: 50px;
      font-style: normal;
      font-weight: 800;
      line-height: normal;
    }
    .contact h1::after {
      content: "";
      margin-left: 36px;
      width: 104px;
      display: inline-block;
      align-self: center;
      background-color: #333;
      height: 4px;
      position: relative;
      top: -12px;
    }
    .contact h2 {
      color: var(--bleumarine-color);
      font-family: "Montserrat";
      font-size: 25px;
      font-style: normal;
      font-weight: 800;
      line-height: normal;
      text-transform: uppercase;
      align-self: center;
      display: flex;
    }
    .contact p.desc-cnt {
      max-width: 571px;
    }
    .contact p {
      color: rgba(51, 51, 51, 0.60);
      font-family: "Montserrat";
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%; /* 27px */
    }
    .contact p.info {
      color: var(--lineargradient-color); /* rgba(18, 70, 104, 0.70);*/
      font-family: "Montserrat";
      font-size: 20px;
      font-style: normal;
      font-weight: 500;
      line-height: 200%; /* 40px */
      margin-top: 43px;
      max-width: 309px;
    }
    .contact form {
      max-width: 312px;
      float: right;
    }
    .contact .form-contact textarea {
      border-radius: 10px;
      border-bottom: 1px solid rgba(51, 51, 51, 0.32);
      background: #FAFAFA;
      height: 100px;
      flex-shrink: 0;
      color: rgba(51, 51, 51, 0.40);
      font-family: "Montserrat";
      font-size: 15px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
    .contact .form-contact .row {
      margin-top: 22px !important ;
    }
    .contact .form-contact .row > * {
      margin-top: 0 !important ;
    }
    .contact .form-control-and {
      border-radius: 10px;
      border: none;
      border-bottom: 1px solid rgba(51, 51, 51, 0.32);
      background: #FAFAFA;
      height: 50px;
      flex-shrink: 0;
      color: rgba(51, 51, 51, 0.40);
      font-family: "Montserrat";
      font-size: 15px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      margin-top: 25px;
      float: right;
    }
    .contact .btn-cont  {
      height: 60px;
      flex-shrink: 0;
      background: var(--bleu-color);
      color: #FFF;
      text-align: center;
      font-family: "Montserrat";
      font-size: 18px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      border-radius: 50px;
      margin-top: 25px;
      float: right;
      border: none !important;
    }
    .contact .cont-icon-rs {
      margin-top: 40px;
    }
    .contact .cont-icon-rs .icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--bleumarine-color);
      display: inline-block;
      margin-right: 20px;
      text-align: center;
      line-height: 40px;
    }
    .contact .cont-icon-rs .icon svg {
      margin-top: 8px;
    }
    .contact .col-cont-left-abs {

    }
    @media (max-width: 768px) {
      .contact .col-cont-left-abs {
        display: none;
      }
      .contact .col-cont-left {
        width: 100%;
        height: 300px;
        flex-shrink: 0;
        background:  url( {{c['field_image1']['image'].url}} ) center center;
      }
      .contact .col-cont-right {
        max-width: 688px;
        margin: auto;
        background: #fff;
        margin-top: -150px;
        border-radius: 20px 20px 0px 0px;
        padding: 57px 69px;
      }
      .contact form {
          max-width: 100%;
      }
      .contact .cont-icon-rs {
        display: none;
      }
      .contact .row.row-cnt {
          margin-top: 57px; 
      }
      .contact .form-contact h2 {
        margin-top: 52px;
      }
      .contact .info-tab {
        color: rgba(18, 70, 104, 0.70);
        font-family: "Montserrat";
        font-size: 20px;
        font-style: normal;
        font-weight: 500;
        line-height: 200%; /* 40px */
      }
    }
    @media (max-width: 575px) {
      .contact .col-cont-right {
        margin-top: 0;
      }
      .contact .col-cont-left {
          display: none;
      }
    }
</style>
<div class="contact">
    <div class="container">
        <div class="row">
          <div class="settings">
            <div class="content-settings" style="display: none;">
              <div class="setting-color version-bleu active">
                <svg width="16" height="16" fill="#3498DB" xmlns="http://www.w3.org/2000/svg" svg-inline="" role="presentation" focusable="false"><path d="M10.74 2c2.349 0 3.927 2.235 3.927 4.32C14.667 10.543 8.119 14 8 14c-.118 0-6.667-3.457-6.667-7.68C1.333 4.235 2.911 2 5.26 2 6.607 2 7.49 2.683 8 3.283 8.511 2.683 9.393 2 10.74 2z"></path></svg>
              </div>
              <div class="setting-color version-vert">
                  <svg width="16" height="16"  fill="#1ECC71" xmlns="http://www.w3.org/2000/svg" svg-inline="" role="presentation" focusable="false"><path d="M10.74 2c2.349 0 3.927 2.235 3.927 4.32C14.667 10.543 8.119 14 8 14c-.118 0-6.667-3.457-6.667-7.68C1.333 4.235 2.911 2 5.26 2 6.607 2 7.49 2.683 8 3.283 8.511 2.683 9.393 2 10.74 2z"></path></svg>
              </div>
              <div class="setting-color version-gris">
                  <svg width="16" height="16" fill="#333" xmlns="http://www.w3.org/2000/svg" svg-inline="" role="presentation" focusable="false"><path d="M10.74 2c2.349 0 3.927 2.235 3.927 4.32C14.667 10.543 8.119 14 8 14c-.118 0-6.667-3.457-6.667-7.68C1.333 4.235 2.911 2 5.26 2 6.607 2 7.49 2.683 8 3.283 8.511 2.683 9.393 2 10.74 2z"></path></svg>
              </div>
          </div>
          </div>
            <div class="col-md-4 col-cont-left-abs" style="       
              position: absolute; 
              left: 0;
              top: 0; 
              max-width: 515px; 
              bottom: 0; 
              background-image: url( {{c['field_media1']['image'].url}} );
              background-repeat:no-repeat;
              background-position: center center;
              background-size: cover;
              border-radius: 0px 20px 20px 0px;
            ">
              
            </div>
            <div class="col-md-4 col-contact col-cont-left">    
                
            </div>
            <div class="col-md-8 col-contact col-cont-right">
                <div class="content-contact-right">
                    <div class="header-cnt">
                      <h1>
                        {{c.field_title}}
                      </h1>
                      <p class="desc-cnt">
                        {{c['body'][0].value|replace({"<p>": "", '</p>': ""})}}
                      </p>
                    </div>
                    <div class="row row-cnt">
                        <div class="col-md-12 none-desk none-mob mode-tablt">
                            <div class="row">
                              <div class="col-sm-6">
                                <h2>INFORMATION.</h2>
                                <p class="info">
                                  {% for size in 0 .. (txts_length - 1) %}
                                    {{ texts[size] }} 
                                    <br>
                                  {% endfor %}
                                </p>
                              </div>
                              <div class="col-sm-6 info-tab" style="margin-top: 80px;">
                                {% for size in 0 .. (txts2_length - 1) %}
                                  {{ texts2[size] }}&nbsp;
                                {% endfor %}
                              </div>
                            </div>
                        </div>
                        <div class="col-md-6 information-contact mode-none-tablt">
                            <h2>INFORMATION</h2>
                            <p class="info">
                              {% for size in 0 .. (txts_length - 1) %}
                                {{ texts[size] }} <br>
                              {% endfor %}
                              <br> 
                              {% for size in 0 .. (txts2_length - 1) %}
                                {{ texts2[size] }}&nbsp;
                              {% endfor %}
                            </p>
                            <div class="cont-icon-rs">
                              {% for size in 0 .. (paragraphs_length - 1) %}
                                <div class="icon">
                                  <img src=" {{paragraphs[size]['field_icon1']['image'].url}}" alt="" style="width: 25px; height: 25px;">
                                </div>
                              {% endfor %} 
                            </div>
                        </div>

                        <div class="col-md-6 form-contact">
                            <form class="needs-validation" novalidate="">
                                <h2>
                                    SEND A REQUEST
                                </h2>
                                <div class="row g-3" bis_skin_checked="1">

                                  <div class="col-12" bis_skin_checked="1">
                                    
                                  <input type="email" class="form-control form-control-and" id="email" placeholder="you@example.com">
                                    <div class="invalid-feedback" bis_skin_checked="1">
                                      Please enter a valid email address for shipping updates.
                                    </div>
                                  </div>
                      
                                  <div class="col-12" bis_skin_checked="1">
                                    <input type="text" class="form-control form-control-and" id="address" placeholder="1234 Main St" required="">
                                    <div class="invalid-feedback" bis_skin_checked="1">
                                      Please enter your shipping address.
                                    </div>
                                  </div>
                      
                                  <div class="col-12" bis_skin_checked="1">
                                    <textarea name="" class="form-control form-control-and">

                                    </textarea>
                                  </div>
                      
                                </div>
                      
                                <button class="w-100 btn-cont btn-primary btn-lg" type="submit">Continue to checkout</button>
                              
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}