              <div class="content-slider">
                <div style="height: 100px;overflow-y: auto;margin-bottom: 25px;">
                <p>
                  "{{paragraphs[size].field_description|replace({"<p>": "", '</p>': ""})}}"
                </p>
              </div>
                <div class="say">
                  <div style="width: 70px; height: 70px; border-radius: 50%; background: #D9D9D9;"></div>
                  <div style="margin-top: 8px;max-width: 78%;word-break: break-all;">
                      <span class="name">{{paragraphs[size].client_name}}</span><br>
                      <span class="addr">{{paragraphs[size].field_pays}}</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %} 
        </div>
      </div>
    </div>
    <div class="body-slider slider-tab">
