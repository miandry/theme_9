{% extends get_module_path('templating') ~ "/templates/misc/block.html.twig" %}
    {% block templating_content %}

    {% set item_name = 'block--staydirect-hero-4-full.html' %} 
    {% set path_css = directory ~ '/templates/templating/css/'~ item_name ~'.css' %}
    {% set css = include(path_css) %} 
    {{render_css(css,'block__staydirect_video_hero_4_full')}}

      <!-- bloc hero 4-->
  {% set c = block_parser(content) %}
  {% set paragraphs = c['field_paragraph3'] %}
  {% set paragraphs_length = paragraphs|length %}

  <style>
      .hero--4-resp {
          height: 100px  !important;
      }
      .hero-4-resp .container-resp {
      
      }
      .hero-4-resp  .content-hero-4-resp-head {
          text-align: center !important;
          max-width: 742px !important;
          margin: auto  !important;
          margin-bottom: 98px  !important;
      }
      .hero-4-resp  .content-hero-4-resp-head h4 {
          color: rgba(51, 51, 51, 0.60) !important;
          text-align: center !important;
          font-family: "Kanit" !important;
          font-size: 20px !important;
          font-style: normal !important;
          font-weight: 300 !important;
          line-height: 150% !important; /* 30px */
          letter-spacing: 3.2px !important;
          text-transform: uppercase !important;
      }   
      .hero-4-resp  .content-hero-4-resp-head h3 {
          color: #333 !important;
          text-align: center !important;
          font-family: "Vastine" !important;
          font-size: 50px !important;
          font-style: normal !important;
          font-weight: 400 !important;
          line-height: 150% !important; /* 75px */
          margin-top: 22px  !important;
      }
      .hero-4-resp .content-hero-4-resp {
         
          display: flex !important;
          justify-content: space-between !important;
          align-items: flex-start !important;
          flex-wrap: wrap !important;
          width: 100% !important;
          max-width: 992px !important;
          margin: auto  !important;
      }
  
        .hero-4-resp .step-resp {
          width: 201px !important;
          text-align: center !important;
          cursor: pointer;
      }
      .hero-4-resp .step-resp:hover .icon-step-resp {
          width: 105px !important;
          height: 105px !important;
          text-align: center !important;
          cursor: pointer;
          transition: all linear 100ms;
      }
      .hero-4-resp .content-step-resp {
          text-align: center !important;
          
          display: flex !important;
          justify-content: center !important;
          flex-direction: column !important;
          align-items: center !important;
      }
      .hero-4-resp .icon-step-resp {
          width: 100px !important;
          height: 100px !important;
          border-radius: 20px !important;
          border: 1px solid rgba(51, 51, 51, 0.30) !important;
          background: rgba(217, 217, 217, 0.26) !important;
          display: flex !important;
          justify-content: center !important;
          align-items: center !important;
      }
      .hero-4-resp .icon-step-resp svg {
          width: 50px !important;
          height: 50px !important;
          fill: #333333 !important;
      }
      .hero-4-resp .icon-step-resp.active svg
      {
          fill: white !important;
          fill-opacity : 0.8 !important;
      }
      .hero-4-resp .icon-step-resp.active {
          background: linear-gradient(138deg, rgba(98, 146, 158, 0.80) -15.04%, #62929E 104.44%)  !important;
      }
      .hero-4-resp .content-hero-4-resp h5 {
          color: #333 !important;
          text-align: center !important;
          font-family: "Kanit" !important;
          font-size: 25px !important;
          font-style: normal !important;
          font-weight: 700 !important;
          line-height: 150% !important; /* 37.5px */
          margin-top: 31px  !important;
      }
      .hero-4-resp .content-hero-4-resp p {
          color: #333 !important;
          text-align: center !important;
          font-family: "Kanit" !important;
          font-size: 20px !important;
          font-style: normal;
          font-weight: 500 !important;
          line-height: 150% !important; /* 30px */
          margin-top: 31px !important;
          opacity: 0.5;
      }
      @media screen and (max-width: 499.96px){ 
