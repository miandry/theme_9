{% extends get_module_path('templating') ~ "/templates/misc/block.html.twig" %}
    
    {% block templating_content %}

    {{ attach_library('staydirect/maintenance') }}
    {{ attach_library('claro/global-styling') }}
    {{ attach_library('staydirect_install/global-styling') }}

    {% set item_name = 'block--staydirect-process-order-website-full.html' %} 
    {% set path_css = directory ~ '/templates/templating/css/'~ item_name ~'.css' %}
    {% set css = include(path_css) %} 
    {{render_css(css,'block__staydirect_process_order_website_full')}}

    
    {% set logo = path_theme() ~ "/logo.png" %}
    {% set url = current_url_alias() %}

    <div class="header-step">
      <div class="container container-and">
        <div class="row row-and">
          <div class="col-6 themed-grid-col">
            <div class="top-left">
              <a href="#">
                <img src="{{logo}}" alt="" class="logo">
              </a>
            </div>
          </div>
          <div class="col-6 themed-grid-col text-right">
            <div class="top-right">
              <div class="step">
                <a href="#">Step 1</a>
              </div>
              <div class="ttl-step">Information</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <main class="main-step main-step-specification main-simple main-order">
      <div class="container container-and">
        <div class="row ">

          <div class="sidebar col-md-4 order-sm-first">

           <div class="d-flex active">
              <p class="mt-3 ms-3">User Information</p>
            </div>
            <div class="d-flex mt-2">
                <p class="mt-4 ms-3">Website Profil</p>
            </div>
           <div class="d-flex mt-2">
                <p class="mt-4 ms-3">Website Themes</p>
            </div>
            <div class="d-flex mt-2">
                <p class="mt-4 ms-3">Conditions and Terms</p>
            </div>
            <div class="d-flex mt-2">
                <p class="mt-4 ms-3">Build your website </p>
             </div>
          </div>
          <div class="col-md-8">
            <div class="row form-payment">
              <div class="col-md-12 col-lg-12 choosecontent">
                     {{ render_form_entity('node','site') }}
              </div>
            </div>
          </div>

        </div>
      </div>
    </main>

{% endblock %}

 