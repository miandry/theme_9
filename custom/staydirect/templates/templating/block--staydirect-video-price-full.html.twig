{% extends get_module_path('templating') ~ "/templates/misc/block.html.twig" %}
    {% block templating_content %}

    {% set item_name = 'block--staydirect-video-price-full.html' %} 
    {% set path_css = directory ~ '/templates/templating/css/'~ item_name ~'.css' %}
    {% set css = include(path_css) %} 
    {{render_css(css,'block__staydirect_video_price_full')}}
    
    {% set c = block_parser(content) %}
    {% set links= c['field_link'] %}
    {% set link_price= c['field_link1'] %}
    {% set paragraphs = c['field_paragraph3'] %}
    {% set paragraphs_length = paragraphs|length %}
    {% if c.field_booleen == "1" %}
        {% set is_activation_price = "" %}
    {% else %}
        {% set is_activation_price = "price-activation" %}
    {% endif %}

    <!-- bloc video -->
    
    <div class="bloc--video-resp" id="prices"></div>
    <section class="bloc-video-resp {{is_activation_price}}" style="position: relative;">
        <div class="optimax">
            <div class="clr-bdr" style="position: relative;">
                <div style="position: absolute;left: 0; right: 0; width: 100%; top:-1px; height: 2px; background: #fff;"></div>
            </div>
            <div class="clip-path-resp"></div>
        
        </div>
        <div class="container-resp container-bloc-video-resp">
            <div class="content-bloc-video-resp">
                <h3 class="title-resp">
                    {{c.field_title}}
                </h3>
                <hr class="hr-title-resp auto">
                
                <div class="pricing-resp">
                    <div class="pricing-left-resp" style="{{ activation_price }}">
                        <h5>
                            {{c.field_subtitle}}
                        </h5>
                        <p>
                            {{c['body'][0].value|replace({"<p>": "", '</p>': ""})}}
                        </p>
                        <div class="conteneur-btn-resp">
                            <a href="{{c['field_link'].url}}" class="header-sticky-btn-resp a-btn-resp">
                                {{c['field_link'].title}}
                            </a>
                        </div>
                    </div>
                    <div class="pricing-right-resp">
                        <div class="content-pricing-right-resp">
                        
                                <div class="star">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
