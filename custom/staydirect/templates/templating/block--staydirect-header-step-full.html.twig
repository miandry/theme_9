{% extends get_module_path('templating') ~ "/templates/misc/block.html.twig" %}
    {% block templating_content %}

    {% set item_name = 'block--staydirect-header-step-full.html' %} 
    {% set path_css = directory ~ '/templates/templating/css/'~ item_name ~'.css' %}
    {% set css = include(path_css) %} 
    {{render_css(css,'block__staydirect_header_step_full')}}

{% set c = block_parser(content) %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<header class="header-step header--rect">
  <div class="container container-and">
    <div class="row row-and">
      <div class="col-6 themed-grid-col">
        <div class="top-left">
          <a href="{{base_url()}}">
            <img src="{{c['field_media1']['image'].url}}" alt="" class="logo">
          </a>
        </div>
      </div>
      <div class="col-6 themed-grid-col text-right">
        <div class="top-right">
          <div class="step">
            <a href="#">{{c.field_title1}}</a>
          </div>
          <div class="ttl-step">{{c.field_subtitle}}</div>
        </div>
      </div>
    </div>
  </div>
</header>

{% endblock %}