
Date next payment {{dateNext}}
{% for payment in mypayments %}
  <div class="payment-item">
    <p><strong>ID:</strong> {{ payment.id }}</p>
    <p><strong>Amount Paid:</strong> {{ payment.amount_paid }}</p>
    <p><strong>Currency:</strong> {{ payment.currency }}</p>
    <p><strong>Status:</strong> {{ payment.status }}</p>
    <p><strong>Invoice URL:</strong> 
      <a href="{{ payment.hosted_invoice_url }}" target="_blank">
        View Invoice
      </a>
    </p>
  </div>
{% else %}
  <p>No payments found.</p>
{% endfor %}
