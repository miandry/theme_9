  {% set logo = path_theme() ~ "/logo.png"  %}
  <style>
    .header-process-logo:focus {
      box-shadow: none;
    }

    .head-cursor {
      cursor: default;
    }
  </style>
   <header class="header-step">
      <div class="container container-and">
        <div class="row row-and">
          <div class="col-6 themed-grid-col">
            <div class="top-left">
              <a href="{{base_url()}}" class="header-process-logo">
                <img src="{{logo}}" alt="" class="logo">
              </a>
            </div>
          </div>
          <div class="col-6 themed-grid-col text-right">
            <div class="top-right">
              <div class="step">
                <a href="javascript:void(0)" class="header-process-logo head-cursor">{{step_number}}</a>
              </div>
              <div class="ttl-step">{{step_name}}</div>
            </div>
          </div>
        </div>
      </div>
    </header>