  {% set logo = path_theme() ~ "/logo.png"  %}
  <style>
    .page-wrapper :focus, .ui-dialog :focus {
      outline: none !important;
      box-shadow: none !important;
    }
  </style>
   <header class="header-step">
      <div class="container container-and">
        <div class="row row-and">
          <div class="col-6 themed-grid-col">
            <div class="top-left">
              <a href="{{base_url()}}">
                <img src="{{logo}}" alt="" class="logo">
              </a>
            </div>
          </div>
          <div class="col-6 themed-grid-col text-right">
            <div class="top-right">
              <div class="step">
                <a href="javascript:void(0)">{{step_number}}</a>
              </div>
              <div class="ttl-step">
          		{% if logged_in %}
                  {{step_name}}
        		{% else %}
                    Login
        		{% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>