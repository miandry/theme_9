{#
/**
 * @file
 * Claro theme implementation to display a Drupal installation page.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_install_page()
 */
#}
<div class="body-content">
   <header class="header-step">
      <div class="container container-and">
        <div class="row row-and">
          <div class="col-6 themed-grid-col">
            <div class="top-left">
              <a href="#">
                <img src="/themes/custom/staydirect_install/logo.png" alt="" class="logo">
              </a>
            </div>
          </div>
          <div class="col-6 themed-grid-col text-right">
            <div class="top-right">
              <div class="step">
                <a href="#">Web Site</a>
              </div>
              <div class="ttl-step">Building</div>
            </div>
          </div>
        </div>
      </div>
   </header>
<div class="container main-step">
    <div class="row p-4">
      <div class="col-4" role="complementary">
        {{ page.sidebar_first }}
      </div>
    <div role="main" class="main-content col-8">
      {% if title %}
        <h2 class="heading-c">{{ title }}</h2>
      {% endif %}
      {{ page.highlighted }}
      {{ page.content }}
    </div>
    {% if page.page_bottom %}
      <footer role="contentinfo">
        {{ page.page_bottom }}
      </footer>
    {% endif %}
    </div>
  </div>
</div>{# /.layout-container #}
